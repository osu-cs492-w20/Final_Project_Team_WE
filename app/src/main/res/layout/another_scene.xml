<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/rl_champ_info"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_scene_header"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:foreground="@drawable/drift"/>

        <ImageView
            android:id="@+id/iv_champ_icon"
            android:layout_width="135dp"
            android:layout_height="135dp"
            android:layout_margin="20dp"
            android:contentDescription="ICON"
            android:layout_below="@+id/iv_scene_header"
            android:gravity="center" />

        <ImageView
            android:id="@+id/iv_small_icon"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_below="@+id/iv_scene_header"
            android:layout_margin="120dp"
            android:contentDescription="ICON"
            android:gravity="center" />

        <TextView
            android:id="@+id/tv_champ_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_below="@+id/iv_scene_header"
            android:layout_toRightOf="@+id/iv_champ_icon"
            android:padding="5dp"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_champ_chest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_champ_time"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="41dp"
            android:layout_marginTop="17dp"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            android:layout_toRightOf="@+id/iv_champ_icon"
            android:padding="5dp"
            android:textSize="20sp" />


        <TextView
            android:id="@+id/tv_champ_Level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_champ_icon"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:padding="5dp"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_champ_mastery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_champ_Level"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:padding="5dp"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_champ_detailed_des"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_champ_mastery"
            android:layout_margin="20dp"
            android:padding="5dp"
            android:textSize="20sp" />

    </RelativeLayout>

</LinearLayout>
</ScrollView>
