<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/rl_summoner_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <ImageView
            android:id="@+id/tv_summoner_id"
            android:layout_width="135dp"
            android:layout_height="135dp"
            android:contentDescription="ICON"
            android:gravity="center" />

        <TextView
            android:id="@+id/tv_summoner_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_toEndOf="@+id/tv_summoner_id"
            android:layout_toRightOf="@+id/tv_summoner_id"
            android:padding="5dp"
            android:textSize="40sp" />

        <TextView
            android:id="@+id/tv_summoner_Level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_summoner_name"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@+id/tv_summoner_id"
            android:layout_toRightOf="@+id/tv_summoner_id"
            android:padding="5dp"
            android:textSize="40sp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_summoner_solo_rank"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_summoner_info"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:padding="16dp">

        <ImageView
            android:id="@+id/iv_summoner_solo"
            android:layout_width="95dp"
            android:layout_height="95dp"
            android:gravity="center" />

        <TextView
            android:id="@+id/tv_summoner_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_toEndOf="@id/iv_summoner_solo"
            android:layout_toRightOf="@+id/iv_summoner_solo"
            android:padding="16dp"
            android:textSize="22sp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_summoner_duo_rank"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_summoner_solo_rank"
        android:layout_marginTop="10dp"
        android:padding="16dp">

        <ImageView
            android:id="@+id/iv_summoner_duo"
            android:layout_width="95dp"
            android:layout_height="95dp"
            android:gravity="center" />

        <TextView
            android:id="@+id/tv_summoner_description2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_toEndOf="@id/iv_summoner_duo"
            android:layout_toRightOf="@id/iv_summoner_duo"
            android:padding="16dp"
            android:textSize="22sp" />

    </RelativeLayout>

</RelativeLayout>