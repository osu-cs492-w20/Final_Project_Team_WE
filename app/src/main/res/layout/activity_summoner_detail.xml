<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".summoner.SummonerDetailActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="184dp"
        android:layout_centerVertical="true"
        android:orientation="horizontal"
        android:padding="16dp">

        <ImageView
            android:id="@+id/iv_summoner_id"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:padding="16dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_summoner_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tv_summoner_Level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:textSize="20sp" />
        </LinearLayout>


    </LinearLayout>


    <TextView
        android:id="@+id/tv_summoner_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:text="Test for details"
        android:textSize="22sp" />
</LinearLayout>